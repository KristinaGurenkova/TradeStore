<Window x:Class="WpfApp2.Views.AddProductWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно добавления товара" Height="650" Width="286">
    <Grid>
        <StackPanel>
            <TextBlock Text="Добавление товара" HorizontalAlignment="Center" FontSize="20" Margin="0 10 0 0 " FontFamily="Comic Sans MS"/>
            <TextBlock Text="Артикул товара" FontSize="15" Margin="0 20 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="ArticleProd" Width="243" FontFamily="Comic Sans MS"/>
            <TextBlock Text="Наименование товара" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="NameProd" Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Описание" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="DescriptionProd" Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Цена" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="PriceProd" Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Количество" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="CountProd" Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Скидка" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="Disc" Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Максимальная скидка" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="MaxDisc" Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Производитель" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="Provider" Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Поставщик" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="Manufact"  Width="243" FontFamily="Comic Sans MS" />
            <TextBlock Text="Категория" FontSize="15" Margin="0 5 0 0 " Width="239" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="Category"  Width="243" FontFamily="Comic Sans MS" />
            <Button Height="26" Width="131" Margin="0 20 0 0" Content="Добавить" x:Name="AddButton" FontFamily="Comic Sans MS" Click="AddButton_Click"/>
            <Button Height="26" Width="131" Margin="0 10 0 0" Content="Назад" x:Name="BackButton" FontFamily="Comic Sans MS" Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Window>

